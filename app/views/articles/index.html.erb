<h1>Article Listing</h1>

<p><%= link_to 'Create new article', new_article_path %></p>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
  </tr>
  
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show Aricle', article_path(article) %> 
      | <%= link_to 'Edit this article', edit_article_path(article) %> 
      | <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"}%></td>
    </tr>
  <% end %>
  
</table>
